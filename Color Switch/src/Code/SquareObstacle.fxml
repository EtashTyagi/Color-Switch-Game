<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.shape.Rectangle?>
<?import java.util.ArrayList?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" fx:controller="Code.SquareObstacle" fx:id="mainPane">
    <Group fx:id="square">
        <Rectangle height="150" width="20" fx:id="right" strokeWidth="0" fill="#1c1c1c"/>
        <Rectangle height="20" width="150" fx:id="up" translateX="-150" strokeWidth="0" fill="#1c1c1c"/>
        <Rectangle height="150" width="20" fx:id="left"  translateX="-150" translateY="20" strokeWidth="0" fill="#1c1c1c"/>
        <Rectangle height="20" width="150" fx:id="down" translateX="-130" translateY="150" strokeWidth="0" fill="#1c1c1c"/>
        <fx:define>
            <ArrayList fx:id="sides">
                <fx:reference source="right"/>
                <fx:reference source="up"/>
                <fx:reference source="left"/>
                <fx:reference source="down"/>
            </ArrayList>
        </fx:define>
    </Group>
</GridPane>

