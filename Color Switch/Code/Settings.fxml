<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.shape.Rectangle?>
<VBox style="-fx-background-color: #1c1c1c;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" spacing="20">
    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>
    <children>
        <Circle fx:id="backButton" fill="darkgrey" radius="25"/>
        <Label text="    Settings" fx:id="settingsLabel" textFill="lightskyblue" translateX="75">
            <font>
                <Font name="System Bold" size="48"/>
            </font>
        </Label>
        <Rectangle height="20" visible="false"/>
        <HBox>
            <children>
                <Label text="Sound: " textFill="lightskyblue" translateX="110">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>
                <Slider translateX="120" translateY="10">
                </Slider>
            </children>
        </HBox>
        <Rectangle height="20" visible="false"/>
        <Button text="Load Game" translateX="175">
        </Button>
    </children>
</VBox>
